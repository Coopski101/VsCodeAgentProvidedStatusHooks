{
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "curl -s -X POST http://127.0.0.1:17321/hook -H 'Content-Type: application/json' -d @- > /dev/null 2>&1",
            "windows": "curl.exe -s -X POST http://127.0.0.1:17321/hook -H \"Content-Type: application/json\" -d @- > nul 2>&1",
            "async": true,
            "timeout": 5
          }
        ]
      }
    ],
